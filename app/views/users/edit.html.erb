<h2>Edit <%= current_user.email %></h2>

<%= simple_form_for(@user) do |f| %>
  <div class="form-inputs">

    <%= f.input :prenom,
                hint: "Insérez ici votre prénom",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :nom,
                hint: "Insérez ici votre nom",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :vision,
                hint: "Expliquez-nous quel est votre vision dans la cuisine ?",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :parcours,
                hint: "Détaillez-nous votre parcours",
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

