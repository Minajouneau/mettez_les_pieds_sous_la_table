<div class="container">
  <div class="container-small">
    <div class="section-account box" id="user-box">
      <div class="section-title">Modifier votre profil</div>
        <div class="section-inner">
          <!-- <h2>Edit <%= current_user.email %></h2> -->
          <%= simple_form_for(@user) do |f| %>
            <div class="form-inputs">
              <%= f.input :prenom,
                              hint: "Insérez ici votre prénom",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
              <%= f.input :nom,
                              hint: "Insérez ici votre nom",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>
              <%= f.input :vision,
                              hint: "Expliquez-nous quel est votre vision de la cuisine ?",
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
              <%= f.input :parcours,
                              hint: "Détaillez-nous votre parcours",
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Enregistrer", class: "btn-normal" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
