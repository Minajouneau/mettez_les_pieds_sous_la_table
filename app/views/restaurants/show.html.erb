<body class="show-page">
  <div class="chief-presentation-background">
    <div class="chief-presentation">
      <div class="column-left">
        <div></div>           
        <div></div>
      </div>
      <div class="column-center">
        <h1 style="text-align: center;"><%= @restaurant.name %></h1>
        <div style="text-align: center;">
          <p><% if @restaurant.description? %>
            <%= @restaurant.description.capitalize %>
            <% else %>
            <%= 'Décrivez ici votre restaurant en 200 mots maximum' %>
            <% end %></p>
          <br>
        </div>
      </div>
      <div class="column-right">
          <%= link_to 'Continuer à éditer', edit_restaurant_path, class: "btn-show", style: "height: 40px;" %>
          <%= link_to "Tableau de bord", restaurants_path, class: "btn-show", style: "height: 40px;" %>
          <%# <button class="btn-normal" style="height: 40px; font-family: 'El Messiri', sans-serif;">Status</button> %>
      </div>
    </div>
  </div>
  <div class="cards-show-dashboard">
    <div class="card-show-product">
      <p style="font-weight: bold;">
        <span id="typed-text" data-user-parcours='<% if @user.parcours? %>
            <%= @user.parcours.capitalize %>
            <% else %>
            <%= 'Détaillez ici votre parcours' %>
            <% end %>'></span>        
      </p>
      <p><% if @user.parcours? %>
            <%= @user.parcours.capitalize %>
            <% else %>
            <%= 'Détaillez ici votre parcours' %>
            <% end %></p>
    </div>
  </div>
  <div class="cards-show-dashboard-2">
    <div class="card-show-product-2">
      <div id="insert-gauche">
        <img src="https://img-3.journaldesfemmes.fr/aUQpTd7t-V06aWzi_ssZ59hbC9M=/1240x/smart/367fc1643b0b476d95465363d04b9ec3/ccmcms-jdf/13476696.jpg" style="max-width: 100%; height: 100%; object-fit: cover;" alt="">
      </div>
      <div id="insert-droit">
        <h1 style="color: white;">Le chef : <% if @user.prenom? %>
            <%= @user.prenom.capitalize %>
            <% else %>
            <%= 'Votre prénom' %>
            <% end %></h1>
        <p style="color: white;"><% if @user.vision? %>
            <%= @user.vision.capitalize %>
            <% else %>
            <%= 'Expliquez ici votre vision' %>
            <% end %></p>
      </div>
    </div>
    <div class="card-show-product-2">
      <img src="https://i.pinimg.com/originals/1f/27/7f/1f277fec06c1c4f76200500f2ce9392b.jpg" style="width: 100%; height: 100%; object-fit: cover;" alt="">
    </div>
  </div>
  <div class="cards-show-hours-dashboard">
    <div class="card-show-hours">
      <h5>Lundi</h5>
      <p>11h - 15h<br>
        18h - 00h</p>
    </div>
    <div class="card-show-hours">
      <h5>Mardi</h5>
      <p>11h - 15h<br>
        18h - 00h</p>
    </div>
    <div class="card-show-hours">
      <h5>Mercredi</h5>
      <p>11h - 15h<br>
        18h - 00h</p>
    </div>
    <div class="card-show-hours">
      <h5>Jeudi</h5>
      <p>11h - 15h<br>
        18h - 00h</p>
    </div>
    <div class="card-show-hours">
      <h5>Vendredi</h5>
      <p>11h - 15h<br>
        18h - 00h</p>
    </div>
    <div class="card-show-hours">
      <h5>Samedi</h5>
      <p>11h - 15<br>
        18h - 02h</p>
    </div>
    <div id="card-show-sunday">
    <h5>Dimanche</h5>
      <p>-<br>
        -</p>
    </div>
  </div>
  <div class="cards-show-pics">
    <%# @restaurant.photos.first.file.key %>
    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 1).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://paris.tastefestivals.com/wp-content/uploads/elementor/thumbs/%C2%A9VincentNageotte-img-taste2019_NGT8824-1-ofjrx7uu1pbkfzvqlpxjvip782525pf4upl9wlo47s.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 2).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/33/b8/6f/33b86fa39193bbadded6668c735c6672.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 3).sample.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/81/0b/f2/810bf2bf863ac471971d7ab429a7da69.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 3).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/a1/89/93/a189935abbf8e0b75f151a57f3f0f4a5.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 2).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/1f/27/7f/1f277fec06c1c4f76200500f2ce9392b.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: 1).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/77/37/2f/77372f1f63967c969dff6a98bb2a1bc4.png', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: :food).sample.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/a1/89/93/a189935abbf8e0b75f151a57f3f0f4a5.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: :menu).first.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/a1/89/93/a189935abbf8e0b75f151a57f3f0f4a5.jpg', class: 'module' %>
    <% end %>

    <% if @restaurant.photos.any? %>
      <%= cl_image_tag @restaurant.photos.where(category: :food).sample.file.key, class: 'module' %>
    <% else %>
      <%= image_tag 'https://i.pinimg.com/originals/81/0b/f2/810bf2bf863ac471971d7ab429a7da69.jpg', class: 'module' %>
    <% end %>
  </div>
  <div class="cards-show-menu">
    <div class="card-show-product">
      <h1 style="margin-bottom: 30px;">Menu</h1>

      <button type="button" id="menu-pic" class="btn-modal" data-toggle="modal" data-target="#exampleModalLong">
        <% if @restaurant.photos.any? %>
          <%= cl_image_tag @restaurant.photos.where(category: :menu).first.file.key, class: 'menu' %>
        <% else %>
          <%= image_tag 'http://le80.fr/wp-content/uploads/2017/03/menu-le_80-2019-HD2.jpg', class: 'menu' %>
        <% end %>
      </button>

      <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header" style="justify-content: center;">
              <h5 class="modal-title" id="exampleModalLongTitle">Menu</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: black;">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <% if @restaurant.photos.any? %>
                <%= cl_image_tag @restaurant.photos.where(category: :menu).first.file.key, class: 'menu' %>
              <% else %>
                <%= image_tag 'http://le80.fr/wp-content/uploads/2017/03/menu-le_80-2019-HD2.jpg', class: 'menu' %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="grid-flex-map">
    <div class="cards-show-dashboard-3">
      <h1><%= @restaurant.name %></h1>
      <br>
      <p><%= @restaurant.address %>
      <br>
      <%= @restaurant.phone_number %>
      <br>
      <%= @restaurant.contact_email %></p>
    </div>
    <div class="demi-down">
      <div class="map-center">
        <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
  <div id="show-footer">
  <br>
  <h4>Nos réseaux sociaux :</h4>
  <br>
    <div id="footer-icons">
      <a href="#"><p><i class="fab fa-facebook""></i></p></a>
      <a href="#"><p><i class="fab fa-twitter""></i></p></a>
      <a href="#"><p><i class="fab fa-instagram""></i></p></a>
    </div>
    <br>
  </div>
  <!-- contenu des meta tags -->
<% content_for :meta_title, "#{@restaurant.name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @restaurant.description %>
<%# content_for :meta_image, cl_image_path(@restaurant.photo.path) %>  
</body>