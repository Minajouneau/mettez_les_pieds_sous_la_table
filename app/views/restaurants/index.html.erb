<div class="container_flex">
  <div class="row">
    <div class="sidenav nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <img class="avatar-large" alt="avatar-large" src="https://img.huffingtonpost.com/asset/5ee0fabd2400009f188ec770.jpeg?cache=G6Prisi0Zo&ops=crop_96_365_4199_2573,scalefit_630_noupscale" />
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Mes restaurants</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Mes informations</a>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"  %>
    </div>
  </div>
  <div class="tab-content" id="v-pills-tabContent">
    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <div class="row">
        <div class="card-product-container col-12 col-lg-10" id='restaurants-index'>
          <% @restaurants.each do |restaurant| %>
            <div class="card-product">
              <%# <%= cl_image_tag restaurant.photos.where(category: 'front'  ).file, crop: :fill, id: 'photo' %>
              <img class="no_image" src="data:image/png;base64,">
              <div class="vertical-line"></div>
              <div class="card-product-infos">
                <h2><%=restaurant.name.upcase%></h2>
                <h4> <%= restaurant.address%></h4>
              </div>
              <div class="vertical-line"></div>
              <div class="status">
                <% if restaurant.activated == true %>
                  <button class=" btn btn-lg enligne_button">EN LIGNE</button>
                <% else%>
                  <button class="btn btn-lg horsligne_button">HORS LIGNE</button>
                <% end %>
              </div>
              <%= link_to "MODIFIER", edit_restaurant_path(restaurant), class: "btn btn-light btn-lg modifier"  %>
              <%= link_to "VISUALISER", restaurant_path(restaurant), class: "btn btn-light btn-lg visualiser"  %>
              <i class="fas fa-utensils couverts"></i>
            </div>
          <% end %>

          <button type="button"  data-toggle="modal" class="add_button" data-target="#oMessagerie">
            <strong>AJOUTER UN RESTAURANT</strong>
          </button>

        </div>
      </div>
    </div>



    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
      <div class="card-product-container col-12 col-lg-10 px-0" id='my-infos'>
              <!-- Edit form -->
        <div class="section-account box" id="user-box">
          <div class="section-title">Modifier votre profil</div>
          <div class="section-inner">
                <!-- <h2>Edit <%= current_user.email %></h2> -->

            <%= simple_form_for(@user) do |f| %>
              <div class="form-inputs">
                <div class= "d-flex justify-content-between">
                  <%= f.input :prenom,
                                  label: "Insérez ici votre prénom",
                                  required: false,
                                  input_html: { autocomplete: "new-password"} %>
                  <%= f.input :nom,
                                  label: "Insérez ici votre nom",
                                  required: false,
                                  input_html: { autocomplete: "new-password" } %>
                </div>

                <%= f.input :vision,
                             label: "décrivez nous votre vision de la cuisine ?",
                                required: false,
                                input_html: { autocomplete: "current-password" } %>
                <%= f.input :parcours,
                                label:"Quel est votre parcours?",
                                required: false,
                                input_html: { autocomplete: "current-password" } %>

              </div>

              <div class="form-actions">
                <%= f.button :submit, "Enregistrer", class: "btn-normal" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- modal ajoute run restaurant -->
  <div class="modal fade" id="oMessagerie" tabindex="-1" role="dialog" aria-labelledby="oMessagerieLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="oMessagerieLabel"> <strong>NOUVEAU RESTAURANT</strong> <i class="fas fa-utensils coucou"></i></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <% if policy(Restaurant).create? %>
            <%= simple_form_for @restaurant do |f| %>
              <%= f.input :name, label:"nom" %>
              <%= f.input :address,label:"addresse", input_html: { id: 'autocompletion-new'} %>
              <%= f.button :submit, value: "Créer un restaurant", class: 'btn-normal' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
