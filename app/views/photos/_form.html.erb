      <%= f.input :file, as: :file, input_html: { id: "photo-#{category}",class: 'photo-input d-none', data: {category: category}}, label_html: { class: 'upload-photo'}, label: 'TÃ©lÃ©charger une photo ðŸ“·'%>
    </div>
  <% end %>
</div>
